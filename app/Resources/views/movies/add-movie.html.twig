{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block body %}
    <div>
        <a href="{{ path('homepage') }}">Go to homepage</a>
        <a href="{{ path('movielist') }}">Go to movie list</a>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}

{% block stylesheets %}
    <style>
        div a {
            display: block;
        }

        form {
            background-color: slategrey;
            color: white;
            padding: 20px;
            width: 250px;
            margin: 0 auto;
        }

        input {
            display: block;
            width: 100%;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}